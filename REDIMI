#include "minilibx-linux/mlx.h"
#include <stdlib.h>
#include <unistd.h>
#include <stdio.h>
#include <X11/keysym.h>

#define LENGTH	500
#define WIDTH	500

typedef struct s_img
{
	void	*img_ptr;
	char	*img_pixels_ptr;
	int		bits_per_pixel;
	int		endian;
	int		line_len;
}			t_img;

typedef struct s_var
{
	void	*mlx;
	void	*win;
	t_img	img;
	t_img	xpm_img; // Separate image for XPM file
	int		img_width; // Width of the XPM image
	int		img_height; // Height of the XPM image
}			t_var;

void	my_pixel_put(t_img *img, int x, int y, int color)
{
	int	offset;

	offset = (img->line_len * y) + (x * (img->bits_per_pixel / 8));
	*((unsigned int *)(offset + img->img_pixels_ptr)) = color;
}

void	col_scr(int color, t_var *param)
{
	for (int y = 0; y < LENGTH; y++)
	{
		for (int x = 0; x < WIDTH; x++)
		{
			my_pixel_put(&param->img, x, y, color);
		}
	}
}

void	tile_image(t_var *param)
{
	int x, y;

	// Clear the screen
	col_scr(0x000000, param);

	// Tile the XPM image across the window
	for (y = 0; y < LENGTH; y += param->img_height)
	{
		for (x = 0; x < WIDTH; x += param->img_width)
		{
			mlx_put_image_to_window(param->mlx, param->win, param->xpm_img.img_ptr, x, y);
		}
	}
}

int	func(int keysym, t_var *param)
{
	if (keysym == XK_Escape)
	{
		mlx_destroy_image(param->mlx, param->img.img_ptr);
		mlx_destroy_image(param->mlx, param->xpm_img.img_ptr);
		mlx_destroy_window(param->mlx, param->win);
		mlx_destroy_display(param->mlx);
		free(param->mlx);
		exit(0);
	}
	else if (keysym == XK_r)
		col_scr(0xff0000, param);
	else if (keysym == XK_b)
		col_scr(0x0000ff, param);
	else if (keysym == XK_g)
		col_scr(0x00ff00, param);
	else if (keysym == XK_t) // Press 'T' to tile the image
		tile_image(param);
	else
		printf("Key pressed: %d\n", keysym);

	mlx_put_image_to_window(param->mlx, param->win, param->img.img_ptr, 0, 0);
	return (0);
}

int	main(void)
{
	t_var	win;

	win.mlx = mlx_init();
	if (!win.mlx)
		exit(1);

	win.win = mlx_new_window(win.mlx, LENGTH, WIDTH, "MiniLibX Example");
	if (!win.win)
	{
		mlx_destroy_display(win.mlx);
		free(win.mlx);
		exit(1);
	}

	// Create image
	win.img.img_ptr = mlx_new_image(win.mlx, WIDTH, LENGTH);
	win.img.img_pixels_ptr = mlx_get_data_addr(win.img.img_ptr,
							&win.img.bits_per_pixel,
							&win.img.line_len,
							&win.img.endian);

	// Load XPM image
	win.xpm_img.img_ptr = mlx_xpm_file_to_image(win.mlx, "./textures/Brown.xpm", &win.img_width, &win.img_height);
	if (!win.xpm_img.img_ptr)
	{
		printf("Error: Failed to load XPM image.\n");
		mlx_destroy_image(win.mlx, win.img.img_ptr);
		mlx_destroy_window(win.mlx, win.win);
		mlx_destroy_display(win.mlx);
		free(win.mlx);
		exit(1);
	}

	// Display XPM image (tiled initially)
	tile_image(&win);

	// Set up key hook
	mlx_key_hook(win.win, func, &win);

	// Start the main loop
	mlx_loop(win.mlx);

	// Cleanup (this will only be reached if mlx_loop is terminated)
	mlx_destroy_image(win.mlx, win.img.img_ptr);
	mlx_destroy_image(win.mlx, win.xpm_img.img_ptr);
	mlx_destroy_window(win.mlx, win.win);
	mlx_destroy_display(win.mlx);
	free(win.mlx);

	return (0);
}
